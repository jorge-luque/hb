<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ListView android:id="@+id/listView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/header"/>
    <TextView android:textColor="@android:color/white" android:gravity="center" android:id="@+id/closeButton" android:background="#e74c3c" android:layout_width="30dp" android:layout_height="30dp" android:text="@string/AMR_text_x" android:layout_alignParentRight="true"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/header" android:padding="4dp" android:layout_width="match_parent" android:layout_height="30dp">
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/versionHolder" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/AMR_text_sdk_version"/>
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/sdkVersion" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
