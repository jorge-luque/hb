<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/ad_progress_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <ProgressBar android:id="@+id/ad_progress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" style="?android:attr/progressBarStyleSmall"/>
    </RelativeLayout>
    <LinearLayout android:gravity="right" android:orientation="vertical" android:id="@+id/ad_choices" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginRight="2dp" android:layout_alignParentRight="true"/>
    <TextView android:textColor="@android:color/white" android:id="@+id/ad_debug" android:background="@color/AMRTransparent" android:padding="4dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true"/>
    <TextView android:gravity="center" android:id="@+id/ad_debug_info" android:visibility="gone" android:layout_width="44dp" android:layout_height="44dp" android:layout_alignParentRight="true" style="@style/AMRAdInfo"/>
</RelativeLayout>
